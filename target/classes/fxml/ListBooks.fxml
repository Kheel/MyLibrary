<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="900.0" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.my.library.controllers.ListBooksController">
   <children>
      <HBox alignment="CENTER" prefHeight="31.0" prefWidth="580.0" spacing="10.0">
         <children>
            <Label text="%category" />
            <ComboBox fx:id="categoryComboBox" onAction="#filterOnActionComboBox" prefWidth="150.0" />
            <Button mnemonicParsing="false" onAction="#clearCategoryComboBox" text="X" />
            <Label text="%author" />
            <ComboBox fx:id="authorComboBox" onAction="#filterOnActionComboBox" prefWidth="150.0" />
            <Button mnemonicParsing="false" onAction="#clearAuthorComboBox" text="X" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
      <TableView fx:id="booksTableView" prefHeight="366.0" prefWidth="880.0" stylesheets="@ListBooks.css">
        <columns>
          <TableColumn fx:id="titleColumn" prefWidth="75.0" text="%title.book" />
          <TableColumn fx:id="descColumn" prefWidth="75.0" text="%desc.book" />
            <TableColumn fx:id="authorColumn" prefWidth="75.0" text="%author" />
            <TableColumn fx:id="categoryColumn" prefWidth="75.0" text="%category" />
            <TableColumn fx:id="ratingColumn" prefWidth="75.0" text="%rating.book" />
            <TableColumn fx:id="isbnColumn" prefWidth="75.0" text="%isbn.book" />
            <TableColumn fx:id="releaseColumn" prefWidth="87.0" text="%release.book" />
            <TableColumn fx:id="deleteColumn" prefWidth="75.0" text="%delete.button" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
